<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Recommender</title>

    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- selfmade css -->
    <link href="css/style.css" rel="stylesheet">

    <link rel="icon" href="images/favicon.ico">
</head>

<body>

    <!-- header section -->
    <section id="headings">
        <!-- headings -->
        <h1 class="main-heading">Movie Recommendation System</h1>
        <h3 class="sub-heading">Find your favourite movies</h3>

        <!-- search bar -->
        <div class="searching">
            <form class="d-flex" role="search" action="/" method="post">
                <input class="form-control me-2" name="searched" type="search" placeholder="Search movie" required>
                <button class="btn btn-outline-light" name="submit" type="submit">Recommend</button>
            </form>
        </div>
    </section>

    <!-- movie list -->
    <section id="movielist">
        <div class="container-fluid">
            <div class="row">
                <% if(movieList.length===1){ %>                 <!-- error or no match case -->

                    <div>
                        <h2 class="sub-heading">
                            <%= movieList[0] %>Please try again.ðŸ˜•
                        </h3>
                    </div>
                    
                    <% } else if(movieList.length===6){ %>      <!-- valid match case -->

                        <h2 class="poster-headings">Recommended Movies</h2>

                        <% for(let i=0;i< movieList.length;i++){ %>
                        <div class="col-xl-2 col-lg-3 col-md-3 col-sm-4 col-6 poster-container">
                            <img class="poster" src=<%=movieList[i] %> >
                        </div>

                    <% } %>
                <% } %>
            </div>
        </div>
    </section>
</body>

</html>